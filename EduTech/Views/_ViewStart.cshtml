@{
    string controllerName = this.ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty;

    if (controllerName == "Home") { 
        Layout = "_HomeLayout";
    }
    else if (controllerName == "Dashboard") {
        Layout = "_DashboardLayout";
    }
    else
    {
        Layout = "_Layout";
    }
}
